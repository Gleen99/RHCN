{
  "environment": "${NODE_ENV}",
  "port": "${PORT}",
  "debug": "${DEBUG}",
  "dbLogger": "${DB_LOGGER}",
  "database": {
    "mongo": {
      "host": "${MONGODB_HOST}",
      "database": "${MONGODB_DATABASE}",
      "port": "${MONGODB_PORT}",
      "user": "${MONGODB_USER}",
      "password": "${MONGODB_PASSWORD}",
      "mongoOptions": {
        "directConnection": true,
        "serverSelectionTimeoutMS": 2000
      }
    }
  },
  "modes": {
    "api": {
      "activated": true
    },
    "queue": {
      "activated": false
    }
  },
  "logLevel": "error",
  "logAsToken": "${LOG_AS_TOKEN}",
  "authSecret": "${AUTH_SECRET}",
  "server": {
    "port": "${PORT}",
    "api": {
      "version": "${API_VERSION}",
      "autoDiscoveryPath": "dist/backend/src/controllers"
    },
    "CORS_ALLOW_ORIGIN": "${CORS_ALLOW_ORIGIN}",
    "JSON_SIZE_LIMIT": "${JSON_SIZE_LIMIT}",
    "uploads": {
      "environment": ["development", "staging", "production"],
      "path": "${UPLOADS_PATH}",
      "temp": "${UPLOADS_TEMP}"
    },
    "auth": {
      "secret": "${AUTH_SECRET}",
      "logAsToken": "${LOG_AS_TOKEN}"
    }
  },
  "email": {
    "passthrough": ".*?@((gmail\\.com)|(rhcn\\.ca))",
    "forceTo": false,
    "defaultSender": "${EMAIL_DEFAULT_NAME} <${EMAIL_DEFAULT_SENDER}>",
    "defaultName": "${EMAIL_DEFAULT_NAME}",
    "adminRecipients": ["${EMAIL_ADMIN_RECIPIENTS}"],
    "extraData": {
      "_frontUrl": "${FRONT_URL}",
      "_apiUrl": "${API_URL}",
      "_cdnUrl": "${FRONT_URL}/static",
      "contactEmail": "contact@rhcn.fr"
    },
    "server": {
      "host": "${EMAIL_HOST}",
      "port": "${EMAIL_PORT}",
      "secure": "${EMAIL_SECURE}",
      "auth": {
        "MJ_APIKEY_PUBLIC": "${MJ_APIKEY_PUBLIC}",
        "MJ_APIKEY_PRIVATE": "${MJ_APIKEY_PRIVATE}"
      }
    },
    "newsletterListId": "${EMAIL_NEWSLETTER_LIST_ID}"
  },
  "stripe": {
    "publishableKey": "${STRIPE_PUBLISHABLE_KEY}",
    "secretKey": "${STRIPE_SECRET_KEY}",
    "webhook": "${STRIPE_WEBHOOK_SECRET}"
  },
  "services": {
    "front": "${FRONT_URL}",
    "api": "${API_URL}"
  }
}
