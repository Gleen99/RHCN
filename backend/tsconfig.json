{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
  "@shared/*": ["../../..shared/*"],
}
  },
  
  "exclude": [
    "migrations",
    "node_modules",
    "dist"
  ]
}
